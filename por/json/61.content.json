  },
  {
    "content_id": 579632,
    "reference_id": 121283,
    "title": "2 Pedro 2.4–6",
    "media_type": "Text",
    "index_reference": "61002004-61002006",
    "language": "por",
    "content": "<p><strong>Quem Deus não poupou?</strong></p><p>Deus não poupou os anjos que pecaram, o mundo antigo e as cidades de Sodoma e Gomorra.</p>",
    "associations": {
      "passage": [
        {
          "start_ref": "61002004",
          "start_ref_usfm": "2PE 2:4",
