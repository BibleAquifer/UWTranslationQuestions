    }
  },
  {
    "content_id": 579638,
    "reference_id": 121289,
    "title": "2 Pedro 2.19",
    "media_type": "Text",
    "index_reference": "61002019",
    "language": "por",
    "content": "<p><strong>A que é um homem escravo?</strong></p><p>Um homem é escravo de tudo o que o vence.</p>",
    "associations": {
      "passage": [
        {
          "start_ref": "61002019",
          "start_ref_usfm": "2PE 2:19",
          "end_ref": "61002019",
          "end_ref_usfm": "2PE 2:19"
        }
      ],
