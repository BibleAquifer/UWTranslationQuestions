  {
    "content_id": 473488,
    "reference_id": 133852,
    "version": "1.0.0",
    "title": "提多書 1:11 (#2)",
    "media_type": "Text",
    "index_reference": "56001011",
    "language": "zht",
    "content": "<p><strong>假教師想要什麼？</strong></p><p>他們想要不義之財。</p>",
    "associations": {
      "passage": [
        {
          "start_ref": "56001011",
          "start_ref_usfm": "TIT 1:11",
          "end_ref": "56001011",
