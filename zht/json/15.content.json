  {
    "content_id": 571772,
    "reference_id": 124432,
    "version": "1.0.0",
    "title": "以斯拉記 8:18",
    "media_type": "Text",
    "index_reference": "15008018",
    "language": "zht",
    "content": "<p><strong>以斯拉如何形容示利比？</strong></p><p>以斯拉形容示利比是一個有見識的人。</p>",
    "associations": {
      "passage": [
        {
          "start_ref": "15008018",
          "start_ref_usfm": "EZR 8:18",
          "end_ref": "15008018",
          "end_ref_usfm": "EZR 8:18"
        }
